<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3pt"
    android:padding="1pt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/notificationBarColor">

    <LinearLayout
        android:id="@+id/linearLayout_info_company_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_company_admin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:contentDescription="Logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/logo_company_admin"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemBranchNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/name"
                    android:layout_marginHorizontal="2pt"
                    android:layout_marginVertical="1pt"
                    android:textColor="@color/white"/>



                <TextView
                    android:id="@+id/item_company_name_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginHorizontal="2pt"
                    android:layout_marginVertical="1pt"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itemBranchEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/email_"
                    android:layout_marginHorizontal="2pt"
                    android:layout_marginVertical="1pt"
                    android:textColor="@color/white"/>



                <TextView
                    android:id="@+id/item_company_email_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginHorizontal="2pt"
                    android:layout_marginVertical="1pt"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/itemBranchQueueNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/number_of_branches_"
                    android:layout_marginHorizontal="2pt"
                    android:layout_marginVertical="1pt"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/item_company_number_of_branches_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginHorizontal="2pt"
                    android:layout_marginVertical="1pt"
                    android:textColor="@color/white"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/delete_company_button_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activate"
        android:layout_margin="1dp"
        android:backgroundTint="@color/mainBackgroundColor"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_info_company_admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>