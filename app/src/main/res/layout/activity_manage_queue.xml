<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.branch_manager.ManageQueueActivity">
    <LinearLayout
        android:id="@+id/linearLayout_number_of_customer_in_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/black_transparent">

        <TextView
            android:id="@+id/number_in_queue_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of customers:"
            android:textSize="21sp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/number_in_queue"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/number_in_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/number_in_queue_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>

    <Button
        android:id="@+id/call_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call next"
        android:textSize="18sp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_number_of_customer_in_queue"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customer_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        tools:listitem="@layout/recyclerview_customer_item_branch_admin"
        app:layout_constraintTop_toBottomOf="@id/call_next"
        app:layout_constraintBottom_toTopOf="@id/stop_queue"
        tools:itemCount="12"/>

    <Button
        android:id="@+id/stop_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
//
    <Button
        android:id="@+id/reset_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:textSize="18sp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar_manage_queue"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>